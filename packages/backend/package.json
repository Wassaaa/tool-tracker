{
  "name": "backend",
  "version": "1.0.0",
  "description": "Tool Tracker Go API Server",
  "private": true,
  "scripts": {
    "dev": "docker-compose up -d && air",
    "build": "go build -o bin/tool-tracker cmd/api/main.go",
    "test": "go test ./...",
    "test:coverage": "go test -cover ./...",
    "test:verbose": "go test -v ./...",
    "clean": "rm -rf bin/ tmp/ && docker-compose down",
    "deps": "go mod download && go mod tidy",
    "generate": "go generate ./...",
    "mocks": "go generate ./cmd/api/internal/service",
    "lint": "golangci-lint run",
    "fmt": "go fmt ./..."
  },
  "keywords": [
    "go",
    "api",
    "rest",
    "docker",
    "postgresql"
  ]
}